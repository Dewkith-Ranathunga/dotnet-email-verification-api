// This file is your backend configuration file. (like .env in MERN)

// It contains settings for database connections, email services, logging, and other configurations.
{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=user_management;User=root;Password=;"
  },
//this is used for sending emails like verification, password reset etc by gmail smtp
  "EmailSettings": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Email": "yourgmail@gmail.com",
    "Password": "your-app-password"
  },
//this is used for logging levels and configurations like file logging, console logging etc
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
